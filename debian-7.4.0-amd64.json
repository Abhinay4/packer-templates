{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "iso_url": "http://cdimage.debian.org/debian-cd/7.4.0/amd64/iso-cd/debian-7.4.0-amd64-netinst.iso",
    "iso_checksum": "b712a141bc60269db217d3b3e456179bd6b181645f90e4aac9c42ed63de492e9",
    "iso_checksum_type": "sha256",
    "output_directory": "output-debian-7.4.0-amd64",
    "vm_name": "packer-debian-7.4.0-amd64",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-7.4.0/preseed.cfg ",
      "<enter>"
    ],
    "ssh_wait_timeout": "60m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/debian/base.sh",
      "scripts/debian/virtualbox.sh",
      "scripts/common/vagrant.sh",
      "scripts/debian/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "debian-7.4.0-amd64.box"
  }],
  "variables": {
    "disk_size": 40000
  }
}
